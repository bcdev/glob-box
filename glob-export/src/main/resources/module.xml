<module>
    <manifestVersion>1.0.0</manifestVersion>

    <symbolicName>glob-export</symbolicName>
    <version>1.1</version>
    <name>GlobToolbox Export</name>

    <description>Provides export components for the GlobToolbox.</description>

    <changelog>
        <![CDATA[
                ]]>
    </changelog>

    <vendor>Brockmann Consult GmbH</vendor>
    <contactAddress>Max Planck Str.2, 21502 Geesthacht (Germany)</contactAddress>
    <copyright>(C) 2010 by Brockmann Consult GmbH</copyright>
    <url>http://envisat.esa.int/beam</url>
    <licenseUrl>http://www.gnu.org/licenses/gpl.html</licenseUrl>


    <categories>Reader</categories>

    <dependency>
        <module>beam-visat-rcp</module>
    </dependency>
    <dependency>
        <module>beam-core</module>
    </dependency>
    <dependency>
        <module>beam-visat</module>
    </dependency>

    <extension point="beam-ui:actions">

        <action>
            <parent>export</parent>
            <id>exportTimeBasedKmz</id>
            <class>org.esa.beam.glob.export.ExportTimeBasedKmz</class>
            <text>Export time series as Google Earth KMZ...</text>
            <mnemonic>K</mnemonic>
            <shortDescr>Export time series as time-based KMZ.</shortDescr>
            <description>Export time series as time-based KMZ.</description>
        </action>

    </extension>

</module>